{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es5",
    "jsx": "preserve",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib": [
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "pages/**/*",
    "server/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
